@model List<CorridaViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/NovoLayout.cshtml";
}

<h2>Passageiros</h2>

<form>
    <div class="form-group">
        <label for="NomePassageiro">Nome</label>
        <input type="text" class="form-control" name="NomePassageiro" id="NomePassageiro" placeholder="Joãozinho">
    </div>


    <button type="submit" class="btn btn-primary">
        Pesquisar
    </button>
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Motorista</th>
            <th scope="col">Passageiro</th>
            <th scope="col">Data</th>
            <th scope="col">Valor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var modelItem in Model)
        {
        <tr>
            <td>@modelItem.Id</td>
            <td>@modelItem.Motorista</td>
            <td>@modelItem.Passageiro</td>
            <td>@modelItem.DataCorrida.ToShortDateString()</td>
            <td>@modelItem.Valor</td>
        </tr>
        }
    </tbody>
</table>

<a href="/Corridas/Criar">Adicionar Corrida</a>